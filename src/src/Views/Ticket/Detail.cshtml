@model src.Models.Ticket

@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_LayoutAdminlte.cshtml";
}

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-9">
            <div class="box-body">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ticketId" />
                <input type="hidden" asp-for="organizationId" />
                <input type="hidden" asp-for="customerId" />
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label asp-for="ticketName" class="control-label"></label>
                            <input asp-for="ticketName" class="form-control" readonly/>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label asp-for="productId" class="control-label"></label>
                            <input value="@ViewBag.productName" class="form-control" readonly/>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="description" class="control-label"></label>
                    <input asp-for="description" class="form-control" readonly/>
                </div>
                <div class="row">
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label asp-for="email" class="control-label"></label>
                            <input asp-for="email" class="form-control" readonly/>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label asp-for="phone" class="control-label"></label>
                            <input asp-for="phone" class="form-control" readonly/>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label asp-for="contactId" class="control-label"></label>
                            <input value="@ViewBag.contactName" class="form-control" readonly />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label asp-for="ticketStatus" class="control-label"></label>
                            <input asp-for="ticketStatus" class="form-control" readonly/>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label asp-for="supportAgentId" class="control-label"></label>
                            <input value="@ViewBag.supportAgentName" class="form-control" readonly/>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label asp-for="supportEngineerId" class="control-label"></label>
                            <input value="@ViewBag.supportEngineerName" class="form-control" readonly />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label asp-for="ticketType" class="control-label"></label>
                            <input asp-for="ticketType" class="form-control" readonly/>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label asp-for="ticketPriority" class="control-label"></label>
                            <input asp-for="ticketPriority" class="form-control" readonly/>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label asp-for="ticketChannel" class="control-label"></label>
                            <input asp-for="ticketChannel" class="form-control" readonly/>
                        </div>
                    </div>
                </div>


            </div>
        </div>
        <div class="col-md-3">
            <div class="row">
                <div class="col-md-12">
                    <a class="btn btn-success" style="margin-bottom:10px" onclick="ShowPopup('@Url.Action("AddComment","Ticket", new { ticketId = Model.ticketId })')"><i class="fa fa-plus"></i> Add New Comment</a>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <a class="btn btn-success" style="margin-bottom:10px" onclick="ShowPopup('@Url.Action("ShowComments","Ticket", new { ticketId = Model.ticketId })')"><i class="fa fa-list"></i> View Comments</a>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-9">
            
        </div>
    </div>

</section>
<!-- /.content -->
<!--modal placeholder-->
<div class="modal modal-primary fade" id="modalDefault">
    <div class="modal-dialog">
        <div class="modal-content">

        </div>
    </div>
</div>

@section Scripts{

    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script src="~/js/views/ticket/detail.js"></script>

}


